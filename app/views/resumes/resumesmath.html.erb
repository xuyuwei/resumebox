<%= render 'layouts/navbar' %>

<section id = "resume" class = "resume section offset-header">
	<span><%= link_to "Arts", 'resumesarts' %>
		<%= link_to "Math", 'resumesmath' %>
		<%= link_to "Engineering", 'resumesengineering' %>
	</span>
		<p></p>
	<div class = "container text-center">

			<% @resumes.each do |r|%>
        <% if r.user.faculty == "math" %>
				<div class = "col-md-4 col-xs-12 col-lg-3" %>
					<td><%= link_to image_tag(r.resume.url(:fullsize)), resume_path(r) %></td>
					<p><%= r.user.name%></p>
					<p><%= r.user.faculty%></p>
				</div>
        <%end%>
			<%end %>
	</div>
</section>
